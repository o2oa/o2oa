<resources>

    <!-- toolbar -->
    <!-- Base application theme. -->
    <style name="XBPMTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/z_color_primary</item>
        <item name="colorPrimaryDark">@color/z_color_primary_dark</item>
        <item name="colorAccent">@color/z_color_accent</item>
    </style>

    <!--Launcher theme 冷启动的时候没有白屏  -->
    <style name="XBPMLauncherTheme" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@mipmap/launch_background</item>
    </style>

    <style name="XBPMTheme.fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/z_color_mask</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- 清除堆栈之后启动Activity, windowDisablePreview 禁用预览  -->
    <style name="XBPMClearActivityTheme" parent="XBPMTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="XBPMTheme.NoActionBar" parent="XBPMTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="XBPMTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="XBPMTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 白色半透明主题-->
    <style name="XBPMTheme.NoActionBar.Translucent.White" parent="XBPMTheme.NoActionBar">
        <item name="android:windowBackground">@color/z_color_white_translucent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- 透明主题 activity 切换动画 -->
    <style name="XBPMTheme.NoActionBar.Transparent" parent="XBPMTheme.NoActionBar">
