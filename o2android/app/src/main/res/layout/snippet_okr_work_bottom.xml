<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical"
    android:padding="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/z_color_split_line"
        android:padding="0dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/z_color_bottom_bar_background"
        android:orientation="horizontal"
        android:padding="0dp">

        <RelativeLayout
            android:id="@+id/tab_okr_work_center"
            style="@style/main_bottom_RelativeLayout_style">
            <TextView
                android:id="@+id/tab_okr_work_center_text"
                android:text="@string/okr_work_deploy_center"
                style="@style/okr_work_bottom_textView_style"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/z_color_split_line"
            android:padding="0dp"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:layout_marginBottom="@dimen/spacing_tiny"></LinearLayout>
        <RelativeLayout
            android:id="@+id/tab_okr_work_detail"
            style="@style/main_bottom_RelativeLayout_style">
            <TextView
                android:id="@+id/tab_okr_work_detail_text"
                android:text="@string/okr_work_deploy_detail"
                style="@style/okr_work_bottom_textView_style"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>