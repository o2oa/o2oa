<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/white"
              android:layout_marginBottom="1dp"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:layout_marginLeft="@dimen/spacing_normal"
        android:layout_marginTop="@dimen/spacing_normal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_meeting_room_list_room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/z_color_title_font"
                android:textSize="@dimen/font_normal"
                />

            <TextView
                android:id="@+id/tv_item_meeting_room_list_room_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:textColor="@color/z_color_title_font"
                android:textSize="@dimen/font_small"
                />

            <LinearLayout
                android:id="@+id/linear_item_meeting_room_list_room_capacity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_meeting_capacity"/>
                <TextView
                    android:id="@+id/tv_item_meeting_room_list_room_capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:textColor="@color/z_color_subtitle_font"
                    android:textSize="@dimen/font_small"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_item_meeting_room_list_room_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/icon_meeting_devices"/>
                <TextView
                    android:id="@+id/tv_item_meeting_room_list_room_devices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_small"
                    android:textColor="@color/z_color_subtitle_font"
                    android:textSize="@dimen/font_small"
                    />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_item_meeting_room_list_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/icon_meeting_room_idle"/>
    </RelativeLayout>

</LinearLayout>
