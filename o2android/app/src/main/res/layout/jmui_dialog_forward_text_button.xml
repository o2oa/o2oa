<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical|center_horizontal"
              android:layout_marginLeft="30dp"
              android:layout_marginRight="30dp"
              android:background="@drawable/jmui_dialog_default_style"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="24.67dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发送给: "
            android:textColor="#2C2C2C"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_forward_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#2C2C2C"
            android:textSize="18sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_forward_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="18sp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="#808080"
        android:textSize="14sp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_forward_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="21dp"
        android:layout_marginTop="13dp"
        android:visibility="gone"/>

    <FrameLayout
        android:id="@+id/fl_forward_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_forward_video"
            android:layout_width="100dp"
            android:layout_height="160dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/play_video"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dip"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/jmui_dialog_bottom_left_btn"
            android:text="@string/jmui_cancel"
            android:textColor="#2C2C2C"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/jmui_dialog_bottom_right_btn"
            android:text="发送"
            android:textColor="#2C2C2C"
            android:textSize="18sp"
            />

    </LinearLayout>

</LinearLayout>
