<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="net.zoneland.x.bpm.mobile.v1.zoneXBPM.app.o2.openim.IMTribeCreateActivity">

    <include layout="@layout/snippet_appbarlayout_toolbar"></include>

    <LinearLayout
        android:id="@+id/ll_im_tribe_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout_snippet"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:background="@android:color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_im_tribe_name_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:layout_marginBottom="@dimen/spacing_small"
                android:text="@string/activity_im_tribe_name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/spacing_normal"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_large"
                android:textColor="@color/z_color_text_primary_dark"/>
            <EditText
                android:id="@+id/edit_im_tribe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_normal"
                android:background="@null"
                android:layout_toRightOf="@id/tv_im_tribe_name_label"
                android:layout_marginLeft="@dimen/spacing_small"
                android:layout_centerVertical="true"
                android:hint="@string/activity_im_tribe_name_hint"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_normal"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_im_tribe_members_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/z_color_text_primary_dark"
                    android:textSize="@dimen/font_normal"
                    android:text="@string/activity_im_tribe_member"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_im_tribe_members_label"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:layout_centerVertical="true"
                    android:textColor="@color/z_color_text_hint"
                    android:textSize="@dimen/font_small"
                    android:text="@string/activity_im_tribe_member_explain"/>
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_im_tribe_members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_tiny"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_normal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|top"
                android:text="@string/activity_im_tribe_notice_label"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_normal"/>

            <EditText
                android:id="@+id/edit_im_tribe_notice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@null"
                android:gravity="start|top"
                android:hint="@string/activity_im_tribe_notice_hint"
                android:minLines="5"
                android:textSize="@dimen/font_normal"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_im_tribe_submit"
        android:layout_width="325dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_im_tribe_form"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_background_44dp"
        android:text="@string/activity_im_tribe_save"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        />

</android.support.constraint.ConstraintLayout>
