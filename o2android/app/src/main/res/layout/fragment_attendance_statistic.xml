<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/z_color_background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/spacing_normal"
        android:paddingEnd="@dimen/spacing_normal"
        android:paddingTop="@dimen/spacing_small"
        android:paddingBottom="@dimen/spacing_small"
        android:background="@android:color/white">
        <LinearLayout
            android:id="@+id/rl_attendance_statistic_choose_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true">
            <TextView
                android:id="@+id/tv_attendance_statistic_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2018-07"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_large"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:src="@mipmap/icon_arrow2_down"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_attendance_statistic_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_small"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/z_color_text_hint"
            tools:text="考勤周期：2018-05-13至2018-06-13"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_normal"
        android:background="@android:color/white"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleTextView
                android:id="@+id/circle_attendance_statistic_normal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:c_width="50dp"
                app:c_height="50dp"
                app:c_text="0次"
                app:c_textSize="@dimen/font_small"
                app:c_textColor="@android:color/white"
                app:c_inColor="@color/z_color_primary"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="正常"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_large"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleTextView
                android:id="@+id/circle_attendance_statistic_late"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:c_width="50dp"
                app:c_height="50dp"
                app:c_textSize="@dimen/font_small"
                app:c_text="0次"
                app:c_textColor="@android:color/white"
                app:c_inColor="@color/z_attendance_late"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="迟到"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_large"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleTextView
                android:id="@+id/circle_attendance_statistic_leave_earlier"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:c_width="50dp"
                app:c_height="50dp"
                app:c_textSize="@dimen/font_small"
                app:c_text="0次"
                app:c_textColor="@android:color/white"
                app:c_inColor="@color/z_attendance_leaveEarlier"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="早退"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_large"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleTextView
                android:id="@+id/circle_attendance_statistic_absent"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:c_width="50dp"
                app:c_height="50dp"
                app:c_textSize="@dimen/font_small"
                app:c_text="0次"
                app:c_textColor="@android:color/white"
                app:c_inColor="@color/z_attendance_absent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缺卡"
                android:layout_marginTop="@dimen/spacing_tiny"
                android:textColor="@color/z_color_text_primary_dark"
                android:textSize="@dimen/font_large"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_attendance_statistic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

</LinearLayout>