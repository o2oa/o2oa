<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/spacing_56">

    <net.zoneland.x.bpm.mobile.v1.zoneXBPM.widgets.CircleImageView
        android:id="@+id/item_group_icon_id"
        android:contentDescription="@string/contact_icon_label"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_width"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:transitionName="@string/transition_person_img"
        android:src="@mipmap/icon_org"
        />
    <RelativeLayout
        android:layout_toRightOf="@id/item_group_icon_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/spacing_small"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_group_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:textSize="@dimen/font_normal"
            android:textColor="@color/z_color_text_primary_dark"
            android:text="@string/contact_list_name_text"/>
        <TextView
            android:id="@+id/item_group_tag_id"
            android:layout_below="@id/item_group_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(22äºº)"
            android:textSize="@dimen/font_small"
            android:textColor="@color/z_color_text_primary"
            android:visibility="visible"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/z_color_text_primary"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/spacing_small"
            android:padding="0dp"></LinearLayout>
    </RelativeLayout>




</RelativeLayout>